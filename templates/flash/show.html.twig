{% extends 'base.html.twig' %}

{% block title %}Flash
{% endblock %}

{% block body %}
	{% include 'home/_navbar.html.twig' %}
	<div class="card-show">
		<img src="{{ vich_uploader_asset(flash) }}" class="card-img-top" alt="{{ flash.id }}">
		<div class="card-body">
			<h5 class="card-title">Flash name</h5>
			<p class="card-text">Description</p>
		</div>
        <div class="col">
						<p class="card-text">
							<h6>Time needed:
								{{ flash.realisationTime ? flash.realisationTime|date('H:i') : '' }}</h6>
							<h6>Price:
								{{ flash.price }}â‚¬</h6>
							<h6>Available :
								{{ flash.available ? 'Yes' : 'No' }}</h6>
						</p>
	</div>
    </div>
    <br>
	<button type="button" class="btn btn-outline-secondary"><a href="{{ path('app_flash_index') }}">back</a></button>
    	{% if is_granted('ROLE_ADMIN') %}
		<button type="button" class="btn btn-outline-warning"><a href="{{ path('app_flash_edit', {'id': flash.id}) }}">edit</a></button>
		{{ include('flash/_delete_form.html.twig') }}
	{% endif %}
{% endblock %}
